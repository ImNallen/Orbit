{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=orbit;Username=postgres;Password=postgres"
  },
  "Jwt": {
    "Secret": "CHANGE_THIS_TO_A_SECURE_SECRET_KEY_IN_PRODUCTION_AT_LEAST_32_CHARACTERS_LONG",
    "Issuer": "Orbit",
    "Audience": "Orbit",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "Seq": {
    "ServerUrl": "http://localhost:5341"
  },
  "Email": {
    "FromEmail": "noreply@orbit.local",
    "FromName": "Orbit",
    "Smtp": {
      "Host": "localhost",
      "Port": 25,
      "Username": "",
      "Password": "",
      "EnableSsl": false
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://seq:80"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "Orbit"
    }
  },
  "AllowedHosts": "*"
}
